{
  "name": "hackathon-management",
  "version": "1.0.0",
  "description": "Hackathon Classroom and Attendance Management System",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "seed": "node server/scripts/seedData.js",
    "create-admin": "node server/scripts/createAdmin.js",
    "create-user": "node server/scripts/createUser.js",
    "create-classrooms": "node server/scripts/createClassrooms.js"
  },
  "keywords": [
    "hackathon",
    "attendance",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.10.1",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
